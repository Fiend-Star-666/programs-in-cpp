using namespace std;
//longest prefix suffix
// Time complexity O(n^2)
void longestpalsubstring (string str){
    int n=str.length();
   // int i=1;
   int maxi=0;
    for (int i=0;i<n;i++){
         int l=i,r=i;
    
    while (l>=0 and r<n and str[l]==str[r]){
         maxi = max(maxi,(r-l+1));
        l--;r++;
    }
   
     r=i+1;l=i;
   
         while (l>=0 and r<n and str[l]==str[r]){
             maxi = max(maxi,(r-l+1));
        l--;r++;
    }
    
     
        
    }
    cout<<maxi;
}

int main(){
    //w(x){
string str;cin>>str;
longestpalsubstring(str);
